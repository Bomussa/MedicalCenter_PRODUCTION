generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id           Int      @id @default(autoincrement())
  username     String   @unique
  passwordHash String
  role         String   @default("ADMIN") // SUPER_ADMIN, ADMIN, DOCTOR, NURSE
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model AuditLog {
  id        Int      @id @default(autoincrement())
  actor     String
  action    String
  meta      String?
  timestamp DateTime @default(now())
}

model Visitor {
  id             Int      @id @default(autoincrement())
  identifier     String   @unique
  gender         String // MALE, FEMALE
  examType       String // RECRUITMENT, PROMOTION, TRANSFER, CONVERSION, AVIATION, COOKS
  assignedClinic String?
  queueNumber    Int?
  visitDate      DateTime @default(now())
  status         String   @default("WAITING") // WAITING, IN_PROGRESS, COMPLETED, CANCELLED
  visits         Visit[]
}

model Visit {
  id            Int      @id @default(autoincrement())
  visitorId     Int
  clinicId      String
  examType      String // RECRUITMENT, PROMOTION, TRANSFER, CONVERSION, AVIATION, COOKS
  codeEntryTime DateTime @default(now())
  assignedTime  DateTime @default(now())
  visitDate     DateTime @default(now())
  status        String   @default("PENDING") // PENDING, IN_PROGRESS, COMPLETED, SKIPPED
  visitor       Visitor  @relation(fields: [visitorId], references: [id])
}

model Clinic {
  id         String   @id
  name       String
  floor      String
  capacity   Int      @default(30)
  status     String   @default("ACTIVE") // ACTIVE, INACTIVE, MAINTENANCE
  doctorName String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model DailyCode {
  id        Int      @id @default(autoincrement())
  clinicId  String
  code      String
  date      DateTime @default(now())
  createdAt DateTime @default(now())

  @@unique([clinicId, date])
}

model User2 {
  id           Int      @id @default(autoincrement())
  username     String   @unique
  passwordHash String
  role         String // SUPER_ADMIN, ADMIN
  createdAt    DateTime @default(now())
}
